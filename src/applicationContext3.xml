<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://wWW.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
 	
<!--         <context:component-scan base-package="com.distribuida"></context:component-scan>
 -->     	<context:property-placeholder location="classpath:datosEmpresa.properties"/>
     	 	
        <bean id="idDatosEmpresa" class="com.distribuida.entities.DatosEmpresa">
         <property name="empresa" value="${empresa}"></property>
         <property name="direccion" value="${direccion}"></property>
         <property name="telefono" value="${telefono}"></property>
         <property name="correo" value="${correo}"></property>             
        </bean>
         
 	    <bean id="idCliente" class="com.distribuida.entities.Cliente"></bean>
 	    
 	    <bean id="idProducto" class="com.distribuida.entities.Producto"></bean>
 	    
 	    <bean id="idFactura" class="com.distribuida.entities.Factura">
 	    <property name="cliente" ref="idCliente"></property>
 	    </bean>
 	    
 	    <bean id="idDetalleFactura" class="com.distribuida.entities.DetalleFactura">
 	    <property name="producto" ref="idProducto"></property>
 	    </bean>
 	    
</beans>

